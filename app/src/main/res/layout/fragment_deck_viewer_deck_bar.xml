<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_Menyu_Fragements.deckViewer_deckBar">

    <LinearLayout
        android:id="@+id/deckViewBar_vis"
        android:background="@color/genericPurple"
        android:alpha=".3"
        android:layout_gravity="right"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="25dp"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:orientation="horizontal"/>
    <LinearLayout
        android:id="@+id/deckViewBar_inv"
        android:gravity="right"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="130dp"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/deckViewBar_view_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/settingsicon"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>
        <Button
            android:id="@+id/deckViewBar_edit_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/charactersicon"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>
        <Button
            android:id="@+id/deckViewBar_delete_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/missionsploticon"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>
    </LinearLayout>

</FrameLayout>